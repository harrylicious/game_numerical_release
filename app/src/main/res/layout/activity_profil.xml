<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Profil">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/poto_saya"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:text="Harry Sunaryo"
            android:textSize="24dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:padding="15dp"
                android:background="@drawable/dot_frame"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:text="Sanggar IT Lombok"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:background="@drawable/frame_btn"
                android:layout_gravity="center"
                android:text="www.lombokit.com"
                android:textSize="18dp"
                android:autoLink="web"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/frame_btn"
                android:layout_gravity="center"
                android:text="Github: Harrylicious"
                android:textSize="18dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/fb"
                    android:src="@drawable/facebook"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/twitter"
                    android:src="@drawable/twitter"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/linkedln"
                    android:src="@drawable/linkedin"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/youtube"
                    android:src="@drawable/youtube"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>