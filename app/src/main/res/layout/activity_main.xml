<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradasi_bg_primary"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"></android.support.design.widget.AppBarLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="15dp"
                android:text="MULAI PERMAINAN"
                android:textColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/gn" />

                <Button
                    android:id="@+id/btnContinue"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/layer_btn_green"
                    android:drawableLeft="@drawable/resume"
                    android:padding="15dp"
                    android:text="LANJUTKAN"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/layer_btn_blue"
                    android:drawableLeft="@drawable/mulai"
                    android:padding="15dp"
                    android:text="MULAI PERMAINAN"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/btnBonus"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/layer_btn_red"
                    android:drawableLeft="@drawable/bonus_lock"
                    android:padding="15dp"
                    android:text="BONUS"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnManual"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/layer_panel"
                    android:drawableLeft="@drawable/ic_manual"
                    android:padding="15dp"
                    android:text="CARA BERMAIN"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/btnStatistik"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/layer_btn_orange"
                    android:drawableLeft="@drawable/statistik"
                    android:padding="15dp"
                    android:text="STATISTIK"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Dikembangkan oleh Sanggar IT Lombok"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/profil"
                    android:text="LIHAT PROFIL"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/pink100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
