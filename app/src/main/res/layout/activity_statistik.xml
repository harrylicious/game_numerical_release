<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="id.haqiqi_studio.gamenumeric.GamePlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:weightSum="3">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:theme="@style/AppTheme.AppBarOverlay">

            <include
                layout="@layout/toolbar_statistik"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:animationCache="true"
                android:orientation="vertical"
                android:padding="10dp" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/addition"
                        android:background="@drawable/layer_btn_orange"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_weight="1"
                        android:text="5"
                        android:gravity="center"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:id="@+id/allevation"
                        android:background="@drawable/layer_btn_green"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_weight="1"
                        android:text="5"
                        android:gravity="center"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/multiplication"
                        android:background="@drawable/layer_btn_blue"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_weight="1"
                        android:text="5"
                        android:gravity="center"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:id="@+id/division"
                        android:background="@drawable/layer_btn_red"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_weight="1"
                        android:text="5"
                        android:gravity="center"
                        android:textSize="55dp"
                        android:textColor="@color/white"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="100dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:text="KETERANGAN:"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_margin="3dp"
                        android:textColor="@color/white"
                        android:background="@drawable/layer_btn_orange"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Warna ini untuk penjumlahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_margin="3dp"
                        android:textColor="@color/white"
                        android:background="@drawable/layer_btn_green"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Warna ini untuk pengurangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_margin="3dp"
                        android:textColor="@color/white"
                        android:background="@drawable/layer_btn_blue"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Warna ini untuk perkalian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_margin="3dp"
                        android:textColor="@color/white"
                        android:background="@drawable/layer_btn_red"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Warna ini untuk pembagian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/footer_manual"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

    </LinearLayout>


</RelativeLayout>
