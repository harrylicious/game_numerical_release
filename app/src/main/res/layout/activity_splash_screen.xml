<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_splash"
    android:backgroundTintMode="screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SplashScreen"
    android:theme="@style/SplashScreen"
    tools:context=".SplashScreen">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="30dp"
            android:text="Bergabunglah dengan"
            android:textSize="20dp"
            android:textColor="#F0F0F0"
            android:gravity="center"
            android:textStyle="italic"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/counter"
             android:text="10.000+"
             android:textSize="50dp"
             android:textColor="#FFCB6B"
             android:layout_marginRight="50dp"
             android:gravity="center"
             android:textStyle="bold"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

         <TextView
             android:layout_alignTop="@id/counter"
             android:text="Orang"
             android:textSize="20dp"
             android:textColor="#B9E3FB"
             android:gravity="center"
             android:textStyle="italic"
             android:fontFamily="@font/roboto_light"
             android:layout_marginTop="15dp"
             android:layout_marginRight="60dp"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />


     </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="GAME NUMERICAL"
            android:layout_marginTop="120dp"
            android:textSize="35dp"
            android:textColor="#18314A"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="30dp"
            android:text="'Fast Thinking, Best Scoring'"
            android:textSize="23dp"
            android:textColor="#466868"
            android:textStyle="italic"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>